@model UserInfo
@{
    ViewBag.Title = "Meeting Summary";
}
<main class="text-center">
<h1 class="h4">Meeting Summary</h1>
    @if(Model.WillAttend == true){
        <p>Thanks, @Model.Name @ViewBag.UserCount people attend the meeting with you.</p>
        <a class="btn btn-sm btn-outline-primary" href="/meeting/list">List Participants</a>
    } else{
        <p>@Model.Name, We are sad because you did not attend.</p>
        <a class="btn btn-sm btn-outline-primary" href="/meeting/apply">Application Form</a>
    }
</main>