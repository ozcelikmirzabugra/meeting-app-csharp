@model List<UserInfo>
@{
    ViewBag.Title = "Meeting Attendance List";
}
<main class="text-center">

    <h1 class="h4">Meeting Attendance List</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Name</td>
                <td>Email</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0;  }

            @foreach(var user in Model) {
                var situation = user.WillAttend == true ? "Yes" : "No"; 
                var className = user.WillAttend == true ? "table-success" : "table-danger";

                if(user.WillAttend == true) {
                    i++;
                }
                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@situation</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detail</a>
                    </td>
                    <td></td>
                </tr>
            }
            
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <span>Participant Count: @i</span>
        </div>
    </div>
</main>